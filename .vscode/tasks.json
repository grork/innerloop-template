{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ],
            "label": "Build",
            "detail": "Compiles the TS files into the output folder",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "npm",
            "script": "clean",
            "label": "Clean outputs",
            "detail": "Removed all files in the ./outputs folder",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "label": "Watch for Typescript changes",
            "script": "watch-compile",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "dedicated",
                "showReuseMessage": false,
                "group": "watching"
            }
        },
        {
            "type": "npm",
            "label": "Watch for dependency changes",
            "script": "watch-dependencies",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "dedicated",
                "showReuseMessage": false,
                "group": "watching"
            }
        },
        {
            "type": "npm",
            "label": "Serve Static",
            "detail": "Serve files with automatic browser loading",
            "script": "serve",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "dedicated",
                "showReuseMessage": false,
                "group": "watching"
            },
            "problemMatcher": [],
        },
        {
            "label": "Serve",
            "dependsOn": [
                "Watch for dependency changes",
                "Watch for Typescript changes",
                "Serve Static"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}