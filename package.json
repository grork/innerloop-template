{
  "name": "codevoid.innerlooptemplate",
  "version": "0.0.1",
  "description": "Inner Loop Template",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf output",
    "compile": "tsc",
    "copy-dependencies": "copyfiles --exclude \"node_modules/**\" --exclude \"output/**\" \"**/*.html\" output && copyfiles --exclude \"node_modules/**\" --exclude \"output/**\" \"**/*.css\" output",
    "postbuild": "npm run copy-dependencies",
    "serve": "browser-sync start --server output --watch --no-ui --listen localhost --no-online --no-open --reload-debounce 250",
    "watch-all": "npm-watch",
    "watch-compile": "tsc --watch",
    "watch-dependencies": "npm-watch copy-dependencies"
  },
  "watch": {
    "copy-dependencies": {
      "patterns": [
        "."
      ],
      "ignore": [
        ".nova",
        ".vscode",
        "node_modules",
        "output",
        "*.ts"
      ],
      "extensions": "js,css,html"
    },
    "compile": {
      "patterns": [
        "."
      ],
      "ignore": [
        ".nova",
        ".vscode",
        "node_modules",
        "output"
      ],
      "extensions": "ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grork/innerloop-template",
    "directory": "web"
  },
  "keywords": [
    "typescript",
    "javascript"
  ],
  "author": "Dominic Hopton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grork/innerloop-template/issues"
  },
  "homepage": "https://github.com/grork/innerloop-template#readme",
  "devDependencies": {
    "browser-sync": "^2.27.9",
    "copyfiles": "^2.4.1",
    "npm-watch": "^0.11.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  }
}